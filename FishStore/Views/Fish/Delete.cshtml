@model FishStore.Models.Fish

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Fish</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FishName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FishName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImageUrl != null  && Model.ImageUrl != "")
            {
                <img src="~/Uploads/@Model.ImageUrl" class="img-thumbnail" style="width: 100px; height: 100px;" />
            }
            else
            {
                <img src="~/Uploads/empty.jpg" class="img-thumbnail" style="width: 100px; height: 100px;" />
            }

        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="FishID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
