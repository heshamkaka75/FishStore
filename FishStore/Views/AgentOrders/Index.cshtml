@model IEnumerable<FishStore.Models.AgentOrder>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New <i class="fas fa-plus"></i></a>
</p>
<table class="table table-hover">
    <thead class="table-success">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Agent.AgentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fish.FishName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @if(item.OrderStatus == 1)
                {
                <p>Delivered</p>
                }
                else
                {
                <p>Pending</p>
                }
                
            </td>
            
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OrderId">Edit <i class="fas fa-edit"></i></a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.OrderId">Details <i class="fas fa-eye"></i></a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OrderId">Delete <i class="fas fa-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
